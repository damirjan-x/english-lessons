# Backend: English Lessons API
# Скопируйте в .env и задайте значения (в K8s — через Secrets/ConfigMap)

# App
APP_NAME=english-lessons-api
DEBUG=false
LOG_LEVEL=INFO
LOG_FORMAT=json

# Server
HOST=0.0.0.0
PORT=8000

# MySQL (обязательно задать в продакшене)
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_USER=app
MYSQL_PASSWORD=
MYSQL_DATABASE=english_lessons

# Пути (по умолчанию под Docker)
TEMPLATES_DIR=templates
REPORT_TEMPLATE_NAME=report_template.docx
TEMP_DIR=/tmp
